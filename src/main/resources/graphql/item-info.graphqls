type ItemInfo {
    id: ID!
    color: Color!
    image: String
    size: Size!
    isColorAvailable: Boolean!
}

input ItemInfoInput {
    color: Color!
    image: String!
    size: SizeInput!
    isColorAvailable: Boolean!
}

extend type Mutation {
    itemInfo(itemInfoInput: ItemInfoInput!): ItemInfo!
}