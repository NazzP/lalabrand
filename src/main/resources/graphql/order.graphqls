type Order {
    id: ID!
    createdAt: String!
    orderedItems: [OrderedItem!]!
    totalPrice: Float!
    discount: Float
    tax: Float
    currency: Currency!
    shipping: ShippingInfo!
}


extend type Query {
    orders: [Order!]!
}

input ShippingInfoRequest {
    country: Country!
    zip: String!
    city: String!
    address1: String!
    address2: String!
    phone: String!
    shippingOptionId: String!
}

extend type Mutation {
    placeOrder(shipping: ShippingInfoRequest!): CommonResponse!
    deleteOrderById(orderId: ID!): CommonResponse!
}
